mixin radio(name, textArray, valuesArray, checked)
  .radio(class=name + '-radio-group')
    - for(let i=0; i<valuesArray.length; i++)
      if (i === checked)
        input.radio__input(name=name type='radio' value=valuesArray[i], id=name + '-radio-group-' + valuesArray[i], checked)
      else
        input.radio__input(name=name type='radio' value=valuesArray[i], id=name + '-radio-group-' + valuesArray[i])
      label.radio__label(for=name + '-radio-group-' + valuesArray[i])
        span.radio__text #{textArray[i]}


