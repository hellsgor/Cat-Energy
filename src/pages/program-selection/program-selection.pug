extends Layouts/main-layout/main-layout.pug

block variables
  - let title = 'Подбор программы';
  - let withHeaderFooter = true;
  - let pageClassName = 'program-selection';

block styles
  link(href=require('./program-selection.scss') rel='stylesheet')
block content
  main.page__main(class=pageClassName)
    .container
      h1(class=pageClassName + '__title') Подбор программы
      .program-selection__block-container
        h6(class=pageClassName + '__subtitle') Заполните анкету, и мы подберем программу питания для вашего кота

    form(name='program-selection-form' id='program-selection-form' action="#")
      include Partials/program-selection/cat-data/cat-data.pug
      include Partials/program-selection/owner-data/owner-data.pug
      include Partials/program-selection/comment-data/comment-data.pug
      include Partials/program-selection/additionally/additionally.pug

    .container
      div(class=pageClassName + '__button-row').page__block-row.program-selection__block-container
        div(class=pageClassName + '__left-column').page__column
          //button.button(type='submit' form='program-selection-form' id='program-selection-button')
          //  span.button__text Отправить заявку
          div(class=pageClassName + '__button')
            include UIKit/button/button
            +button('отправить заявку')(form='program-selection-form' id='program-selection-button')
        div(class=pageClassName + '__right-column').page__column
          p * — Обязательные поля
    include Components/modal-window/modal-window.pug
block scripts
  script(src=require('./program-selection.js') defer)
